{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@gtek/*": ["packages/*/src"],
      "@apps/*": ["apps/*/src"],
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "apps/**/*",
    "packages/**/*",
    "*.ts",
    "*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".next"
  ],
  "references": [
    { "path": "./apps/gdatanomocs" },
    { "path": "./apps/polystack-ide" },
    { "path": "./apps/saqqara-workflow" },
    { "path": "./packages/liquidnomocs-framework" }
  ]
}
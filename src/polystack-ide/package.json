{
  "name": "polystack-ide",
  "version": "1.0.0",
  "description": "AI-native development environment with grant generation",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "electron": "electron electron/main.js",
    "electron-dev": "ELECTRON_IS_DEV=true electron electron/main.js",
    "dist": "npm run build && electron-builder",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "@monaco-editor/react": "^4.6.0",
    "electron-is-dev": "^2.0.0",
    "axios": "^1.5.0",
    "codemirror": "^6.0.1",
    "@codemirror/lang-javascript": "^6.2.1",
    "@codemirror/lang-python": "^6.1.3",
    "@codemirror/theme-one-dark": "^6.1.2"
  },
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.6.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "typescript": "^4.0.0"
  },
  "build": {
    "appId": "com.gtek.polystack-ide",
    "productName": "gTek PolyStack IDE",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}